@model IEnumerable<BookstoreManager.Models.Order>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderedBook.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfOrderedBooks)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderedBook.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfOrderedBooks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
        </tr>
    }
</table>